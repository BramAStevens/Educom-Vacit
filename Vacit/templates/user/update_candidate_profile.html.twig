{% extends 'base.html.twig' %}

{% block title %}User profile!{% endblock %}

{% block body %}
<form method="post">
    <h1 class="h3 mb-3 font-weight-normal">Please fill in your user profile - Candidate</h1>
    <label for="inputPicture">Picture</label>
    <input type="text" name="user_picture" id="inputPicture" value="{{user.userpicture}}">
    <label for="inputSurname">Surname</label>
    <input type="text" name="user_surname" id="inputSurname" value="{{user.usersurname}}">
    <label for="inputLastname">Last name</label>
    <input type="text" name="user_lastname" id="inputLastname" value="{{user.userlastname}}">
    <label for="inputEmail">Email</label>
    <input type="text" name="user_email" id="inputEmail" value="{{user.useremail}}">
    <label for="inputDOB">Date of Birth</label>
    <input type="text" name="user_dob" id="inputDOB" value="{{user.userdob}}">
    <label for="inputPhone">Phone Number</label>
    <input type="text" name="user_phone_number" id="inputPhone" value="{{user.userphonenumber}}">
    <label for="inputAddress">address</label>
    <input type="text" name="user_address" id="inputAddress" value="{{user.useraddress}}">
    <label for="inputPostcode">Postcode</label>
    <input type="text" name="user_postcode" id="inputPostcode" value="{{user.userpostcode}}">
    <label for="inputCity">City</label>
    <input type="text" name="user_city" id="inputCity" value="{{user.usercity}}">
    <label for="inputMotivation">Motivation Letter</label>
    <input type="text" name="user_motivation" id="inputMotivation" value="{{user.usermotivation}}">
    <label for="inputCV">CV</label>
    <input type="text" name="user_cv" id="inputCV" value="{{user.usercv}}">
    <button class="btn btn-lg btn-primary" type="submit">
        Submit
    </button>
</form>
{% endblock %}
