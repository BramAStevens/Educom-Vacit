{% extends 'base.html.twig' %}

{% block stylesheets %}
   <script>
        $(document).ready(function () {
            var table = $('#applications').DataTable({
                destroy: true,
                      paging: false,
                      searching: false,
                      ordering: true,
                      bInfo: false,
                      fixedColumns: true,
                      bLengthChange: false,       
            });
        });
    </script>
{% endblock %}
{% block title %}My Jobs{% endblock %}

{% block body %}
<div class="grid-x padding-x margin-top-3 margin-left-3 margin-right-3">

<div class="cell medium-12 small-12">
<h1 class="float-left">APPLICANTS</h1>
</div>
<div class="cell medium-12 small-12">

<table id="applications" class="display nowrap dataTable order-column" style="border-collapse: collapse;
  table-layout: fixed;
  width: 100%;">
    <thead>
    <tr>
        <th id="tablehead">NAME</th>
        <th id="tablehead">DATE</th>
        <th id="tablehead">PROFILE</th>
        <th id="tablehead">INVITE CANDIDATE</th>
    </tr>
    </thead>
    <tbody style="text-align: center;  text-overflow: clip; overflow: clip; white-space: nowrap">
    {% for application in applications %}
    
    <tr>
    <td style="text-overflow: clip; overflow: clip; white-space: nowrap;">{{application.user.username}}</td>
    <td >{{application.applicationdate|date("d/m/Y")}}</td>
    <td><a href="/showUser/{{application.user.id}}"><i class="fas fa-eye" style="color: #F15A24;"></i></a></td>
    <td><a href="/inviteApplicant/{{application.user.id}}"><i class="fas fa-paper-plane" style="  color: #F15A24;"></i></a></td>
   </tr>
    {% endfor %}
    </tbody>
</table>
</div>
<div class="cell medium-12 small-12 margin-top-1 margin-bottom-1">
</div>
</main>
  <footer class="footer">
        {% include "headerfooter/footer.html.twig" %}
        </footer>  
{% endblock %}
