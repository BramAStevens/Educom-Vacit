
{% extends 'base.html.twig' %}

{% block stylesheets %}
   <script>
        $(document).ready(function () {
            var table = $('#application').DataTable({
                ajax: "{{ path('applicationsByUser', {'user_id': app.user.id }) }}",
                dataType:'json',
                columns: [  
                    {
                        data: "job_id"
                    },
                    {
                        data: "application_date"
                    },
                    {
                        data: "application_company"
                    },
                    {
                        data: "application_invitation"
                    }
                ]

            });

            // Reload every 10 seconds
            setInterval(function () {
                table.ajax.reload();
            }, 10000);
        });
    </script>
{% endblock %}
{% block title %}My Applications{% endblock %}

{% block body %}
<h1>My Applications</h1>
<div class="grid-container small-flex-child-auto margin-top-3 margin-bottom-3 width-75">
<table id="application" class="display nowrap dataTable dtr-inline collapsed">
    <thead>
        <th>job_id</th>
        <th>application_date</th>
        <th>application_company</th>
        <th>application_invitation</th>
    </thead>
    <tbody>
  
    </tbody>
</table>
</div>
{% endblock %}