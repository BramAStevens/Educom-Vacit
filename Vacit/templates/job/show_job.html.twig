{# medium screen #}
<div class="grid-x grid-margin-x float-left margin-left-3 margin-right-3 hide-for-small-only">  
<div class="cell medium-11"> 

<div class="cell">
<div class="hexagon margin-top-3 margin-right-1" style="width: 160% !important; background-color: black !important;">
    <img class="hexagonpic" src="{{ asset( job.technology.techpicture )}}" style="border: none"></img>            
</div>
</div>

<div class="cell">
<div class="square margin-top-3">
    <img class="squarepic" src="{{ asset( job.jobpicture )}}" style="border: none"></img>            
</div>
</div>

</div>
</div>

<div class="cell medium-1 small-12 margin-top-3 margin-bottom-3"> 
<div class="grid-x float-middle margin-left-3 margin-right-3">

<div class="cell medium-12 small-12">
<label>{{job.jobdate|date("d F Y")}}</label>
</div>

<div class="cell medium-12 small-12">
<h1 style="color: black !important; font-family: Arial !important;">{{job.jobtitle}} for {{job.user.username}}</h1>
</div>

<div class="cell medium-6 small-6">
<h3 class="float-left">level:&nbsp;</h3><h3 class="float-left" style="color: black !important;">{{job.joblevel}}</h3>
</div>

<div class="cell medium-6 small-6">
<i class="fas fa-map-marker-alt float-right" style="color: #F15A24; font-size: 150%; margin-right: 5%;" id="iconsmall1"><h3 class="float-right" style="color: black !important;  margin-top: -8%; margin-right: -5%;">{{job.joblocation}}</h3></i>
</div>

<div class="cell medium-12 small-12">
        {% autoescape false %}
        {{job.jobdescription}}
         {% endautoescape %}
</div>

<div class="cell medium-12 small-12">
    <a href="/applyToVacancy/{{job.id}}">
    <i class="fas fa-arrow-right float-left"  id="iconsmall2" style="color: #F15A24;  font-size: 300%; cursor: pointer; margin-top: 0.5%;"></i><h1 class="float-left" style="cursor: pointer; font-family: Arial; color: #F15A24;">&nbsp; &nbsp;APPLY</h1>
    </a>   
</div>

<div class="cell medium-12 small-12">
    <h3 class="float-left" style="color: black !important;">MORE JOBS FROM </h3><h3>&nbsp;{{job.user.username}}</h3>
    <table id="jobsByEmployer" class="display nowrap dataTable order-column" style="border-collapse: collapse;
      table-layout: fixed;
      width: 100%;">
        <thead>
        <tr>
            <th id="tablehead">DATE</th>    
            <th id="tablehead">JOB</th>
            <th id="tablehead">LEVEL</th>
        </tr>
        </thead>
        <tbody style="text-align: center;  text-overflow: clip; overflow: clip; white-space: nowrap">
        {% for vacancy in allJobsByEmployer %}
        <tr>
        <td >{{vacancy.jobdate|date("d-m-Y")}}</td>
        
        <td style="text-overflow: clip; overflow: clip; white-space: nowrap;  "><a style="color: #F15A24 !important;" href="/showJob/{{vacancy.id}}">{{vacancy.jobtitle}}</a></td>
    
        <td style="text-overflow: clip; overflow: clip; white-space: nowrap;">{{vacancy.joblevel}}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

</div>
</div>



{% endblock %}