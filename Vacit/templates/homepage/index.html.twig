{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<script>
    $(document).ready(function () {
        var mySlides = [
            {% for job in jobs %}
            {
                src: "{{job.technology.techpicture}}",
                title: "{{job.jobtitle}}"
            },
            {% endfor %}

        ];
        $("#background-image").vegas({
            slides: mySlides,
            timer: false,
            delay: 1700,
            transition: 'slideLeft',
            walk: function (index, slideSettings) {
                $(".text-block h1").html(mySlides[index].title);
            }
        });

    })
</script>

<main class="content" style="background-color: #F15A25;">
  
    <div class="grid-x float-left margin-left-3" id="pleasemercy">
        <div class="cell medium-12 hide-for-small-only">
            <div class="grid-x align-middle">
                <div class="vegashexagon">
                    <div id="background-image" style="width: 300px; height: 300px; background-color: black;">
                        <div class="container">
                            <div class="text-block">
                                <h1
                                    style="text-align: center; color: white !important; font-size: 20px; margin-left: 10%; margin-bottom: -10%;">
                                    Title</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<div class="grid-x margin-top-3 margin-left-1 margin-right-1">
    {% for job in jobs|slice(0,5) %}
    <div class="cell medium-12 small-12 margin-top-1 margin-bottom-1">
        <div class="grid-container">
            <div class="grid-x padding-x float-middle">


                <div class="cell medium-2 small-4">
                    <div class="hexagonhome" style="background-color: black !important;">
                        <img class="hexagonpic" src="{{ asset( job.technology.techpicture )}}"></img>
                    </div>
                </div>

                <div class="cell medium-8 small-8">
                    <p style="margin-bottom: -0.5%;">{{job.jobdate|date("d F Y")}}</p>
                    <h3 style="color: white !important; text-align: left !important;">{{job.jobtitle}}</h3>
                    <p>{{job.jobdescription|slice(0, 200)}}</p>
                <!-- for small -->
                    <button  class="btn btn-success float-left margin-bottom-2 hide-for-medium">
                        <i class="fas fa-arrow-right hide-for-medium" style="color: white; font-size: 400%; cursor: pointer;"></i>
                      </button>
                </div>

                <!-- for medium -->
                <div class="cell medium-2 hide-for-small-only">
                    <button  class="btn btn-success float-right">
                        <i class="fas fa-arrow-right float-left" style="color: white; margin-top: 60%; font-size: 400%; cursor: pointer;"></i>
                      </button>
                </div>
        
            </div>
        </div>
    </div>
        {% endfor %}

    </div>


</main>
{% endblock %}