{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
{% block stylesheets %}
<script>
    $(document).ready(function() {
   var mySlides = [
     {% for job in jobs %}
            { src: "{{job.technology.techpicture}}", title: "{{job.jobtitle}}"},
      {% endfor %}
          
        ];
$("#background-image").vegas({
            slides: mySlides,
            timer: false,
            transition: 'slideLeft',
            walk: function (index, slideSettings) {
                  $(".text-block h1").html(mySlides[index].title);
            }
        });

      }) 
</script>
{% endblock %}

<main class="content" style="background-color: #F15A25; z-index: 50 !important;">
<div class="vegashexagon">
  
     <div id="background-image" style="overflow: hidden !important; width: 300px; height: 300px; background-color: black;">
        <div class="container">
            <div class="text-block">
                <h1 style="text-align: center; color: white !important; font-size: 20px; margin-left: 10%; margin-bottom: -10%;">Title</h1>
            </div>
        </div>
    
    </div>     

</div>
</main>

{% endblock %}
